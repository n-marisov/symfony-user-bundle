<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://symfony.com/schema/dic/doctrine/doctrine-1.0.xsd">

    <!-- Реализует собой точку на карте -->
    <entity name="Maris\Symfony\User\Entity\User" table="users" >

        <id name="id" type="integer" column="id">
            <generator/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </id>

        <field name="phone" type="phone_number"/>

        <one-to-one field="person" target-entity="Maris\Symfony\Person\Entity\Person">
            <join-columns>
                <join-column name="person_id"/>
            </join-columns>
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-one>

        <field name="password"/>
        <field name="roles"/>
    </entity>

</doctrine-mapping>